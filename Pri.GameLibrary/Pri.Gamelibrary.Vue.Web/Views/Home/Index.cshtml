
<div id="app">
    <div class="row">
        <div class="col col-lg-2 mx-auto">
            <button v-on:click="showGames" class="btn btn-outline-info">Games</button>
        </div>
    </div>
    <div v-if="gamesVisible" class="row">
        <h5>games</h5>
        <div class="row">
            <div v-for="game in games" class="col col-lg-4 mb-2 text-center">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{game.name}}</h5>
                        <h6 class="card-subtitle mb-2">{{game.developer.name}}</h6>
                        <h6 class="card-subtitle mb-2">{{game.averageReview}}</h6>
                        <span v-for="platform in game.platforms" class="card-text text-muted">{{platform.name}} </span>
                        <div class="card-footer text-center">
                            <a v-on:click="showReviews(game)" href="#" class="btn btn-primary">See all reviews</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div v-if="reviewsVisible" class="row">
        <h5>reviews for {{gameName}}</h5>
        <div class="row">
            <div v-for="review in reviews" class="col col-lg-4 mb-2 text-center">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{review.rating}} / 10</h5>
                        <h6 class="card-subtitle mb-2">Posted: {{review.created}}</h6>
                        <h6 class="card-subtitle mb-2">{{review.description}}</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div v-if="hasError" class="d-flex justify-content-center">
        <span class="sr-only">ERROR</span>
    </div>

    <div v-if="loading" class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="sr-only"></span>
        </div>
    </div>
</div>


<script src="~/js/app.js"></script>